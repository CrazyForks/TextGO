{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TextGO",
  "version": "0.1.11",
  "identifier": "top.xylitol.textgo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "TextGO",
        "width": 864,
        "height": 648,
        "minWidth": 600,
        "minHeight": 300,
        "visible": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 16, "y": 18 }
      },
      {
        "label": "popup",
        "title": "TextGO",
        "url": "/popup",
        "width": 400,
        "height": 300,
        "minWidth": 400,
        "minHeight": 300,
        "visible": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 10, "y": 14 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app", "dmg"],
    "icon": ["icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
